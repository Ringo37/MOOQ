generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

enum RoleType {
  ADMIN
  EDITOR
  USER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      RoleType @default(USER)

  password     Password?
  courses      Course[]     @relation("CourseUser")
  ownedCourses Course[]     @relation("CourseOwner")
  favorite     Course[]     @relation("Favorite")
  assessments  Assessment[]
  answers      Answer[]
}

enum FileVisibility {
  PUBLIC
  PRIVATE
}

model File {
  id         String         @id @default(cuid())
  name       String
  key        String         @unique
  mimeType   String
  url        String?
  visibility FileVisibility @default(PRIVATE)
  createdAt  DateTime       @default(now())

  courses Course[]
  answers Answer[]
}

enum CourseVisibility {
  PUBLIC
  PRIVATE
  UNLISTED
}

model Course {
  id          String           @id @default(cuid())
  name        String
  slug        String           @unique
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  visibility  CourseVisibility @default(UNLISTED)

  cover    File?     @relation(fields: [fileId], references: [id])
  fileId   String?
  owners   User[]    @relation("CourseOwner")
  users    User[]    @relation("CourseUser")
  favorite User[]    @relation("Favorite")
  sections Section[]
}

model Section {
  id     String  @id @default(cuid())
  name   String
  slug   String
  order  Int     @default(0)
  isOpen Boolean @default(false)

  course   Course    @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  courseId String
  lectures Lecture[]

  @@unique([courseId, slug])
}

model Lecture {
  id     String  @id @default(cuid())
  name   String
  slug   String
  order  Int     @default(0)
  isOpen Boolean @default(false)

  section   Section @relation(fields: [sectionId], references: [id])
  sectionId String
  pages     Page[]

  @@unique([sectionId, slug])
}

model Page {
  id     String  @id @default(cuid())
  name   String
  slug   String
  order  Int     @default(0)
  isOpen Boolean @default(false)

  blocks    Block[]
  lecture   Lecture @relation(fields: [lectureId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  lectureId String

  @@unique([lectureId, slug])
}

enum BlockType {
  CONTENT
  PROBLEM
}

model Block {
  id      String    @id @default(cuid())
  order   Int       @default(0)
  type    BlockType @default(CONTENT)
  content String?

  problem   Problem? @relation(fields: [problemId], references: [id])
  problemId String?
  page      Page     @relation(fields: [pageId], references: [id])
  pageId    String
}

enum ProblemType {
  QUIZ
  FORM
}

enum ProblemStatus {
  OPEN
  CLOSED
  HIDDEN
  GRADED
}

model Problem {
  id           String        @id @default(cuid())
  name         String?
  type         ProblemType   @default(QUIZ)
  status       ProblemStatus @default(HIDDEN)
  content      String?
  maxScore     Int           @default(100)
  startTime    DateTime?
  endTime      DateTime?
  timeLimitSec Int?

  blocks       Block[]
  assessments  Assessment[]
  answerFields AnswerField[]
}

model Assessment {
  id      String  @id @default(cuid())
  score   Int     @default(0)
  comment String?

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String

  @@unique([userId, problemId])
}

model AnswerField {
  id    String @id @default(cuid())
  name  String
  score Int    @default(0)

  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String
  answer    Answer[]

  @@unique([problemId, name])
}

enum CorrectType {
  CORRECT
  WRONG
  PARTIAL
}

model Answer {
  id        String       @id @default(cuid())
  score     Int          @default(0)
  answer    String?
  correct   CorrectType?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  file          File?       @relation(fields: [fileId], references: [id])
  fileId        String?
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  answerField   AnswerField @relation(fields: [answerFieldId], references: [id], onDelete: Cascade)
  answerFieldId String

  @@unique([answerFieldId, userId])
}
