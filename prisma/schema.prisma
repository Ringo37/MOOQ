generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

enum RoleType {
  ADMIN
  EDITOR
  USER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      RoleType @default(USER)

  password     Password?
  courses      Course[]     @relation("CourseUser")
  ownedCourses Course[]     @relation("CourseOwner")
  assessments  Assessment[]
  answers      Answer[]
}

model File {
  id         String   @id @default(cuid())
  name       String
  objectName String   @unique
  bucket     String
  mimeType   String
  url        String?
  createdAt  DateTime @default(now())

  courses Course[]
  answers Answer[]
}

model Course {
  id          String @id @default(cuid())
  name        String
  slug        String @unique
  description String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  cover      File?      @relation(fields: [fileId], references: [id])
  fileId     String?
  owners     User[]     @relation("CourseOwner")
  users      User[]     @relation("CourseUser")
  categories Category[]
}

model Category {
  id    String @id @default(cuid())
  name  String
  order Int    @default(0)

  course   Course    @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  courseId String
  Lecture  Lecture[]

  @@unique([courseId, name])
  @@unique([courseId, order])
}

model Lecture {
  id     String  @id @default(cuid())
  name   String
  slug   String
  order  Int     @default(0)
  isOpen Boolean @default(false)

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
  pages      Page[]

  @@unique([categoryId, slug])
  @@unique([categoryId, order])
}

model Page {
  id     String  @id @default(cuid())
  name   String
  slug   String
  order  Int     @default(0)
  isOpen Boolean @default(false)

  blocks    Block[]
  lecture   Lecture @relation(fields: [lectureId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  lectureId String

  @@unique([lectureId, slug])
  @@unique([lectureId, order])
}

enum BlockType {
  CONTENT
  PROBLEM
}

model Block {
  id      String    @id @default(cuid())
  order   Int       @default(0)
  type    BlockType @default(CONTENT)
  content String?

  problem   Problem? @relation(fields: [problemId], references: [id])
  problemId String?
  page      Page     @relation(fields: [pageId], references: [id])
  pageId    String

  @@unique([pageId, order])
}

enum ProblemType {
  QUIZ
  ASSIGNMENT
  EXAM
}

enum ProblemStatus {
  OPEN
  CLOSED
  HIDDEN
  GRADED
}

model Problem {
  id       String        @id @default(cuid())
  name     String
  type     ProblemType   @default(QUIZ)
  status   ProblemStatus @default(HIDDEN)
  content  String?
  maxScore Int           @default(100)

  blocks       Block[]
  assessments  Assessment[]
  answerFields AnswerField[]
}

model Assessment {
  id      String  @id @default(cuid())
  score   Int     @default(0)
  comment String?

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String

  @@unique([userId, problemId])
}

model AnswerField {
  id    String @id @default(cuid())
  name  String
  score Int    @default(0)

  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String
  answer    Answer[]

  @@unique([problemId, name])
}

enum CorrectType {
  CORRECT
  WRONG
  PARTIAL
}

model Answer {
  id        String       @id @default(cuid())
  score     Int          @default(0)
  answer    String?
  correct   CorrectType?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  file          File?       @relation(fields: [fileId], references: [id])
  fileId        String?
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  answerField   AnswerField @relation(fields: [answerFieldId], references: [id], onDelete: Cascade)
  answerFieldId String

  @@unique([answerFieldId, userId])
}
